<?xml version="1.0" encoding="utf-8"?>
<phpunit
    bootstrap="TestBootstrapper.php"
    colors="false"
    stopOnFailure="true">

    <testsuites>
      <testsuite name="Entirety">
        <directory>./</directory>
      </testsuite>
    </testsuites>
    
    <filter>
        <whitelist>
            <directory suffix=".php">../Source/</directory>
            <exclude>
                <directory>../vendor/</directory>
            </exclude>
        </whitelist>
    </filter>   
</phpunit>
